{
    "name": "mhaqnegahdar-portfolio-backend",
    "version": "1.0.0",
    "description": "This is an **API** using Node, TypeScript. For my own blog",
    "main": "src/server.ts",
    "module": "src/server.ts",
    "type": "module",
    "scripts": {
        "dev": "bun run --watch src/server.ts",
        "build": "rm -rf /dist/ && bun build --outdir dist src/server.ts",
        "start": "bun dist/server.js",
        "test": "bun test --detectOpenHandles --coverage --maxWorkers=1 "
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/express": "^5.0.0",
        "@types/supertest": "^6.0.2",
        "supertest": "^7.0.0"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "reflect-metadata": "^0.2.2"
    }
}
